---
import "../styles/global.css";
import { Header } from "../components/navigation/Header";
import { MobileNav } from "../components/navigation/MobileNav";
import { DesktopNav } from "../components/navigation/DesktopNav";
import { ToasterProvider } from "../components/ToasterProvider";

interface Props {
  title?: string;
  pageTitle?: string;
  showNavigation?: boolean; // Allow hiding navigation for public pages
}

const { title = "Flashcard App", pageTitle = "Flashcards", showNavigation = true } = Astro.props;

// Get current path for active nav state
const currentPath = Astro.url.pathname;

// Get user from locals (set by auth middleware)
const user = Astro.locals.user;

// Get current language from locals (set by middleware)
const currentLang = Astro.locals.lang;

// Get theme from locals (set by middleware)
const theme = Astro.locals.theme;
---

<!doctype html>
<html lang={currentLang} class={theme === "dark" ? "dark" : ""}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-background">
    {
      showNavigation ? (
        <div class="flex h-screen overflow-hidden">
          {/* Desktop Side Navigation */}
          <DesktopNav currentPath={currentPath} lang={currentLang} client:load />

          {/* Main Content Area */}
          <div class="flex flex-1 flex-col overflow-hidden">
            {/* Header */}
            <Header title={pageTitle} user={user} lang={currentLang} theme={theme} client:load />

            {/* Page Content */}
            <main class="flex-1 overflow-y-auto pb-20 sm:pb-0">
              <slot />
            </main>
          </div>
        </div>
      ) : (
        <slot />
      )
    }

    {/* Mobile Bottom Navigation (only if showNavigation is true) */}
    {showNavigation && <MobileNav currentPath={currentPath} lang={currentLang} client:load />}

    {/* Toast Provider */}
    <ToasterProvider client:only="react" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
